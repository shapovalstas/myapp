<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#bedce0e5" />
            <stroke
                    android:width="1dp"
                    android:color="#be767a7f" />
            <corners
                    android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#bedce0e5"
                    android:endColor="#be767a7f"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#be767a7f" />
            <corners
                    android:radius="1dp" />

        </shape>
    </item>
</selector>